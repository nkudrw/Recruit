<%= form_for(@skill , remote: true) do |f| %>
  <%=  f.text_field :name, class: 'form-control' %>
  <%= f.fields_for :points ,remote: true do |c| %>
  <%= c.hidden_field :skill_id, :value => @skill_last.id+1 %>
  <%= c.hidden_field :user_id, :value => @user.id %>
  <% end %>
  <%= f.submit '追加', class: 'btn btn-primary btn-block' %>


<% end %>
